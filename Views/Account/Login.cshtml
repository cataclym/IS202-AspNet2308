@model UserLoginModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="text-center">
    <div class="login-form">
    <h3 class="display-4">Logg inn</h3>
    <br/>
    <form asp-action="Login" method="post">
        <div>
            <label asp-for="Username">Brukernavn</label>
            <input asp-for="Username"/>
        </div>
        <br>
        <label asp-for="Password">Passord</label>
        <div class="password-input-wrapper">
            <input asp-for="Password" type="password" id="Password"/>
            <div class="checkbox-wrapper">
                <input type="checkbox" id="togglePassword" class="togglePassword"/>
                <br>
                <br>
                <label class="text-nowrap margin-bottom-2" for="togglePassword">Vis passord</label>
            </div>
        </div>
        <div class="center-horizontal" style="margin-top: 15px;">
            <button type="submit" class="btn-general btn-primary">Logg inn</button>
        </div>
    </form>
    </div>


    <!-- Registration-form -->
    <br><br>
    <p>Har du ikke en bruker?</p>
    <form asp-action="UserRegistration" asp-controller="Account" method="post">
        <div class="center-horizontal">
            <button type="submit" class="btn-general btn-secondary">Registrer deg</button>
        </div>
    </form>
</div>

