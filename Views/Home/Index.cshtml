@model Users

@{
    ViewData["Title"] = "Forside";
}

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>

<body>

<div class="text-center">
    <div class="text-center">
        <h1 class="display-4"><b>Meld inn feil til</b> <span class="highlight"><b>Kartverket</b></span></h1>
    </div>
    <div class="button-container">
        <form asp-action="Login" asp-controller="Account" method="post" class="flex-grow-1">
            <button type="submit" class="btn-index btn-primary m-auto">Logg inn</button>
            <p class="highlight">Logg inn for å melde inn feil</p>
        </form>

        <!-- Registration-form -->
        <form asp-action="UserRegistration" asp-controller="Account" method="post" class="flex-grow-1">
            <button type="submit" class="btn-index btn-secondary m-auto">Registrer deg</button>
            <p class="highlight">Ny bruker? Registrer deg for å få tilgang</p>
        </form>
    </div>
</div>
<div class="text-left">
    <div class="list-container">
        <div class="list-item">
            <h2 class="highlight">Fremgangsmetode</h2>
            <ul class="my-list">
                <li>Registrer deg</li>
                <li>Finn området på kartet</li>
                <li>Marker og beskriv feilen</li>
                <li>Send inn</li>
            </ul>
        </div>
        <div class="list-item">
            <h2 class="highlight">Hvorfor denne løsningen?</h2>
            <ul class="my-list">
                <li>Enkelt å melde inn feil</li>
                <li>Du bidrar til å oppdatere kartet</li>
                <li>Spor tidligere rapporter</li>
            </ul>
        </div>
    </div>
</div>
</body>
</html>
