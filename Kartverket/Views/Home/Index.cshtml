@model Kartverket.Models.MyPageModel

<body class="background-image">

<div class="title-container">
    <div class="text-center">
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <h1 class="title-text"><b>Velkommen tilbake, @User.Identity.Name!</b></h1>

        }
        else
        { 
            <h1 class="title-text"><b>MELD INN FEIL TIL KARTVERKET</b></h1>

        }
    </div>
</div>


@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="btn-container-index">
        <div class="btn-container">
            <form asp-action="MyPage" asp-controller="Home" method="get" class="flex-grow-1">
                <button type="submit" class="btn-index btn-primary m-auto">Min Side
                    <i class="bi bi-box-arrow-in-right"></i>
                </button>
            </form>

            <!-- Registration-form -->
            <form asp-action="Logout" asp-controller="Account" method="get" class="flex-grow-1">
                <button type="submit" class="btn-index btn-primary m-auto">Logg ut <i class=" bi bi-box-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>
}
else
{
    <div class="btn-container-index">
        <div class="btn-container">
            <form asp-action="Login" asp-controller="Account" method="get" class="flex-grow-1">
                <button type="submit" class="btn-index btn-primary m-auto">Logg inn
                    <i class="bi bi-box-arrow-in-right"></i>
                </button>
            </form>

            <!-- Registration-form -->
            <form asp-action="UserRegistration" asp-controller="Account" method="get" class="flex-grow-1">
                <button type="submit" class="btn-index btn-primary m-auto">Registrer deg
                    <i class="bi bi-pencil-square"></i>
                </button>
            </form>
        </div>
    </div>
}

<!-- White Box Section -->
<div class="white-box">
    <div class="white-box-content">
        <div class="text-left">
            <div class="list-container">
                <div class="list-item">
                    <h2>Fremgangsmetode</h2>
                    <ul class="my-list">
                        <li>Registrer deg  <i class="bi-person-plus"></i></li>
                        <li>Finn området på kartet  <i class="bi-geo-alt"></i></li>
                        <li>Marker og beskriv feilen  <i class="bi-pencil-square"></i></li>
                        <li>Send inn  <i class="bi-send"></i></li>
                    </ul>
                </div>
                <div class="list-item">
                    <h2>Hvorfor denne løsningen?</h2>
                    <ul class="my-list">
                        <li>Enkelt å melde inn feil <i class="bi-flag"></i></li>
                        <li>Du bidrar til å oppdatere kartet <i class="bi-pencil-square"></i></li>
                        <li>Spor tidligere rapporter <i class="bi-search"></i></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Popup -->
<div id="deleteConfirmationPopup" style="display:none;" class="popup">
    <div class="popup-content">
        <span class="close" onclick="closePopup()">&times;</span>
        <p>@TempData["DeletionMessage"]</p>
    </div>
</div>

</body>
